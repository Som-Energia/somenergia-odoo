<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="project.open_view_project_all" model="ir.actions.act_window">
            <field name="domain">[('is_internal_project', '=', False), ('som_is_internal_project', '=', False)]</field>
        </record>

        <record id="som_project_tags_tree_view" model="ir.ui.view">
            <field name="model">project.tags</field>
            <field name="inherit_id" ref="project.project_tags_tree_view"/>
            <field name="priority">90</field>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='name']" position="after">
                    <field name="som_for_internal_project"
                           optional="hide"
                           groups="base.group_system"/>
                </xpath>
            </field>
        </record>

        <record id="som_project_tags_action" model="ir.actions.act_window">
            <field name="name">Tags</field>
            <field name="res_model">project.tags</field>
            <field name="domain">[('som_for_internal_project', '=', False)]</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No tags found. Let's create one!
              </p>
              <p>
                  Use tags to categorize your tasks.
              </p>
            </field>
        </record>

        <record id="som_project_view_task_form2" model="ir.ui.view">
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="som_project_area_domain_ids"
                           invisible="1"/>
                    <field name="som_additional_project_domain_ids"
                           invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="attributes">
                    <attribute name="domain">
                        [('som_for_internal_project', '=', False)]
                    </attribute>
                </xpath>

                <xpath expr="//field[@name='user_ids']" position="after">
                    <field name="som_department_ids" widget="many2many_tags"/>
                    <field name="som_project_id"
                           options="{'no_open': True}"
                           string="Area"
                           domain="[('id', 'in', som_project_area_domain_ids)]"
                           readonly="0"/>
                </xpath>

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="som_additional_project_id"
                           options="{'no_open': True}"
                           string="Project"
                           domain="[('id', 'in', som_additional_project_domain_ids)]"
                           readonly="0"/>
                </xpath>

            </field>
        </record>

        <record id="som_view_task_kanban" model="ir.ui.view">
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban" />
            <field name="arch" type="xml">
                <xpath expr="//kanban/field[@name='color']" position="before">
                    <field name="id"/>
                </xpath>
                <xpath expr="//strong[hasclass('o_kanban_record_title')]" position="replace">
                    <strong class="o_kanban_record_title">
                        <span>[#</span><field name="id"/><span>]&amp;nbsp;</span>
                        <s t-if="!record.active.raw_value"><field name="name" widget="name_with_subtask_count"/></s>
                        <t t-else=""><field name="name" widget="name_with_subtask_count"/></t>
                    </strong>
                </xpath>
            </field>
        </record>

        <menuitem id="menu_project_tags_act"
                  action="somenergia_custom.som_project_tags_action"
                  parent="project.menu_main_pm"/>

    </data>
</odoo>

<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="som_view_report_crm_phonecall_pivot" model="ir.ui.view">
        <field name="model">crm.phonecall.report</field>
        <field name="inherit_id" ref="crm_phonecall.view_report_crm_phonecall_pivot" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='team_id']" position="replace">
                <field name="som_operator" type="row"/>
<!--                <field name="som_caller_name" type="row"/>-->
<!--                <field name="som_contract_name" type="row"/>-->
            </xpath>
            <xpath expr="//field[@name='duration']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="som_view_report_crm_phonecall_filter" model="ir.ui.view">
        <field name="model">crm.phonecall.report</field>
        <field name="inherit_id" ref="crm_phonecall.view_report_crm_phonecall_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="som_operator"/>
                <field name="som_caller_name"/>
                <field name="som_contract_name"/>
                <field name="cat_1_name" string="Category1 name"/>
                <field name="cat_2_name" string="Category2 name"/>
                <field name="cat_1_fullcode" string="Category1 full code"/>
                <field name="cat_2_fullcode" string="Category2 full code"/>
            </xpath>
            <xpath expr="//filter[@name='status']" position="after">
                <filter context="{'group_by':'som_operator'}" name="som_operator" string="Operator"/>
                <filter context="{'group_by':'som_caller_name'}" name="som_caller_name" string="Caller name"/>
                <filter context="{'group_by':'som_contract_name'}" name="som_contract_name" string="Contract name"/>
                <filter context="{'group_by':'cat_1_name'}" name="cat_1_name" string="Category1 name"/>
                <filter context="{'group_by':'cat_1_fullcode'}" name="cat_1_fullcode" string="Category1 full code"/>
                <filter context="{'group_by':'cat_2_name'}" name="cat_2_name" string="Category2 name"/>
                <filter context="{'group_by':'cat_2_fullcode'}" name="cat_2_fullcode" string="Category2 full code"/>
            </xpath>
        </field>
    </record>

</odoo>

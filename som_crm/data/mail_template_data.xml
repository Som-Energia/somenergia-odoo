<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="som_email_template_lead_confirmation" model="mail.template">
            <field name="name">Lead reception mail</field>
            <field name="model_id" ref="crm.model_crm_lead"/>
            <field name="subject">Nuevo Lead Asignado: ${object.name}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="email_from">"${user.company_id.name}" &lt;${(user.email or user.company_id.email)}&gt;</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="False"/>
            <field name="body_html"><![CDATA[
<div style="font-family: Arial, sans-serif; font-size: 14px; color: #333;">
    <p>Hola ${object.partner_id.name},</p>
    <p>
        Received your request
    </p>
    <p>
        <strong>Lead:</strong> ${object.name}<br/>
        <strong>Partner:</strong> ${object.partner_name or 'Not specified'}<br/>
        <strong>Email:</strong> ${object.email_from or 'Not specified'}<br/>
        <strong>Phone:</strong> ${object.phone or 'Not specified'}<br/>
    </p>
    <p>
        Thanks,<br/>
        ${user.company_id.name}
    </p>
</div>
            ]]></field>
        </record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="som_view_stage_form" model="ir.ui.view">
        <field name="model">crm.stage</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fold']" position="after">
                <field name="som_upcoming_activity_days"/>
            </xpath>
        </field>
    </record>
    <record id="som_view_stage_tree" model="ir.ui.view">
        <field name="model">crm.stage</field>
        <field name="type">tree</field>
        <field name="inherit_id" ref="crm.crm_stage_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_won']" position="after">
                <field name="som_upcoming_activity_days" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>

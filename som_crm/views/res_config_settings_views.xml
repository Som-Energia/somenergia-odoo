<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="crm_phonecall.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='group_show_form_view']/../../.." position="inside">

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="som_ff_send_lead_confirmation_email" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="som_ff_send_lead_confirmation_email" />
                        <div class="text-muted">Enable email confirmation for opportunity</div>
                        <span attrs="{'invisible': [('som_ff_send_lead_confirmation_email', '=', False)]}">Email from</span>
                        <field name="som_ff_send_lead_confirmation_email_from"
                                attrs="{'invisible': [('som_ff_send_lead_confirmation_email', '=', False)]}"
                                class="text-center"/>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box" id="default_company_schedule_setting">
                    <div class="o_setting_right_pane">
                        <label for="som_crm_call_category_id"/>
                        <span class="fa fa-lg fa-building-o"
                              title="CRM Category"
                              role="img" aria-label="Values set here are company-specific."/>
                        <div class="row">
                            <div class="text-muted col-lg-8">
                                Set default CRM Category
                            </div>
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="som_crm_call_category_id" class="o_light_label"/>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <label for="som_ff_call_to_opportunity">
                            Set up Enable convert to opportunity automation
                        </label>
                        <div class="text-muted">
                            Set up Enable convert to opportunity automation
                        </div>
                        <field name="som_ff_call_to_opportunity" class="text-center"/><span>Enable convert to opportunity automation</span>
                    </div>
                </div>

            </xpath>
        </field>
    </record>
</odoo>

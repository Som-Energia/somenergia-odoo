<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_crm_phonecall_form_inherit_result" model="ir.ui.view">
        <field name="model">crm.phonecall</field>
        <field name="inherit_id" ref="crm_phonecall.crm_case_phone_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='medium_id']" position="after">
                <field name="som_phone_call_result_id"/>
            </xpath>

            <xpath expr="//group[@name='categorization']" position="attributes">
                <attribute name="groups">sales_team.group_sale_salesman</attribute>
            </xpath>

        </field>
    </record>

    <record id="som_view_crm_phonecall_tree_inherit_result" model="ir.ui.view">
        <field name="model">crm.phonecall</field>
        <field name="inherit_id" ref="crm_phonecall.crm_case_inbound_phone_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="som_phone_call_result_id"/>
            </xpath>
            <xpath expr="//button[@name='action_button_convert2opportunity']" position="attributes">
                <attribute name="states"></attribute>
            </xpath>
        </field>
    </record>

    <record id="view_crm_phonecall_tree_inherit_result" model="ir.ui.view">
        <field name="model">crm.phonecall</field>
        <field name="inherit_id" ref="crm_phonecall.crm_case_phone_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="som_phone_call_result_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_convert_call_wizard_form" model="ir.ui.view">
        <field name="name">convert.call.wizard.form</field>
        <field name="model">convert.call.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm">
                <field name="phonecall_id" invisible="1"/>
                <field name="message" readonly="1" />
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_convert_call_wizard" model="ir.actions.act_window">
        <field name="name">Covert call to opportunity</field>
        <field name="res_model">convert.call.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
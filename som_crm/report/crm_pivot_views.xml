<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pivot views -->
    <record id="crm_lead_view_pivot_daily_target" model="ir.ui.view">
        <field name="name">crm.lead.pivot.daily.target</field>
        <field name="model">crm.lead.report</field>
        <field name="arch" type="xml">
            <pivot string="Opportunity Analysis" sample="1">
                <field name="date_closed" interval="day" type="col"/>
                <field name="user_id" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="crm_activity_tracking_view_pivot" model="ir.ui.view">
        <field name="name">crm.activity.pivot.daily.tracking</field>
        <field name="model">crm.activity.tracking.report</field>
        <field name="arch" type="xml">
            <pivot string="Daily Activity" sample="1">
                <field name="date" interval="day" type="col"/>
                <field name="user" type="row"/>
                <field name="activity_state" type="col"/>
            </pivot>
        </field>
    </record>

    <!-- Graph views -->
    <record id="crm_lead_view_graph_daily_target" model="ir.ui.view">
        <field name="name">crm.lead.graph.daily.target</field>
        <field name="model">crm.lead.report</field>
        <field name="arch" type="xml">
            <graph string="Opportunity Analysis" type="line" sample="1">
                <field name="date_closed" interval="day"/>
            </graph>
        </field>
    </record>

    <record id="crm_activity_tracking_view_graph" model="ir.ui.view">
        <field name="name">crm.lead.graph.daily.tracking</field>
        <field name="model">crm.activity.tracking.report</field>
        <field name="arch" type="xml">
            <graph string="Daily Activity" type="line" sample="1">
                <field name="date" interval="day"/>
            </graph>
        </field>
    </record>

    <!-- Search views -->
    <record id="crm_activity_tracking_view_filter" model="ir.ui.view">
        <field name="model">crm.activity.tracking.report</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <search string="Search Activity Tracking">
                <filter string="Date" name="date" date="date"/>
                <separator/>
                <filter string="Activity due today or before" name="som_activity_due_today_or_before" domain="[('date', '&lt;=', context_today().strftime('%Y-%m-%d'))]"/>
                <separator/>
            </search>
        </field>
    </record>

    <record id="crm_lead_view_pivot_daily_target_filter" model="ir.ui.view">
        <field name="model">crm.lead.report</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <search string="Search Leads">
                <filter string="Date Created" name="create_date" date="create_date"/>
                <filter string="Date Closed" name="date_closed" date="date_closed"/>
            </search>
        </field>
    </record>

    <!-- Tree views -->
    <record id="crm_lead_report_tree" model="ir.ui.view">
        <field name="model">crm.lead.report</field>
        <field name="arch" type="xml">
            <tree string="CRM Opportunity Report">
                <field name="opportunity" widget="many2one" options="{'open': True}"/>
                <field name="user_id"/>
                <field name="team_id"/>
                <field name="active_stage"/>
                <field name="virtual_state"/>
                <field name="create_date"/>
                <field name="date_closed"/>
                <field name="day_close"/>
                <field name="channel"/>
                <field name="source"/>
                <field name="lost_reason"/>
            </tree>
        </field>
    </record>

    <record id="crm_activity_tracking_report_tree" model="ir.ui.view">
        <field name="model">crm.activity.tracking.report</field>
        <field name="arch" type="xml">
            <tree string="CRM Activities Analysis">
                <field name="opportunity" widget="many2one" options="{'open': True}"/>
                <field name="user"/>
                <field name="activity_state"/>
                <field name="date"/>
                <field name="activity_type"/>
            </tree>
        </field>
    </record>

    <!-- Menu actions -->
    <record id="crm_lead_action_daily_target_analysis" model="ir.actions.act_window">
        <field name="name">Opportunity Analysis</field>
        <field name="res_model">crm.lead.report</field>
        <field name="view_mode">pivot,graph</field>
    </record>

    <record id="crm_activity_tracking_action_analysis" model="ir.actions.act_window">
        <field name="name">Activity Analysis</field>
        <field name="res_model">crm.activity.tracking.report</field>
        <field name="view_mode">pivot,graph</field>
    </record>

    <!-- Menu items -->
    <menuitem id="crm_menu_daily_target_analysis"
              name="Opportunity Analysis"
              parent="crm.crm_menu_report"
              action="crm_lead_action_daily_target_analysis"
              sequence="99"/>

    <menuitem id="crm_menu_activities_analysis"
              name="Activity Analysis"
              parent="crm.crm_menu_report"
              action="crm_activity_tracking_action_analysis"
              sequence="99"/>
</odoo>
            <field name="model_id" ref="survey.model_survey_survey"/>
            <field name="domain_force">[('users_login_required', '=', False)]</field>
            <field name="groups" eval="[(4, ref('som_group_survey_public_manager'))]"/>
            <field name="perm_unlink" eval="0"/>
